<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiz complete!"
        android:textColor="#5edf23"
        android:layout_alignBottom="@+id/numberOfWrong"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="87dp"
        android:textSize="40dp"/>

    <TextView
        android:id="@+id/numberOfRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/numberOfWrong"
        android:layout_centerHorizontal="true"
        android:textSize="35dp"
        android:textColor="#5edf23"/>

    <TextView
        android:id="@+id/numberOfWrong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/numberOfRight"
        android:layout_alignStart="@+id/numberOfRight"
        android:textSize="35dp"
        android:textColor="#ff0000"
        />
</RelativeLayout>