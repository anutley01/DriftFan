<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:class="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ImageButton
        android:id="@+id/mapsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mapslogo"
        android:layout_below="@+id/displayHotelName"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"/>


    <ImageButton
        android:id= "@+id/phoneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src = "@drawable/phone"
        android:layout_below="@+id/mapsButton"
        android:layout_alignLeft="@+id/infoButton"
        android:layout_alignStart="@+id/infoButton"
        android:layout_marginTop="225dp"
        android:background="@color/colorPrimary"/>

    <ImageButton
        android:id="@+id/infoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/info_icon_resized"
        android:layout_below="@+id/mapsButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/displayHotelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorPrimary"
        />


</RelativeLayout>
</ScrollView>
