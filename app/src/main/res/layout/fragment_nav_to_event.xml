<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:class="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/mapInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select an event to open the location in Google Maps"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <ImageButton
        android:id="@+id/round1button"
        android:layout_width="184.5dp"
        android:layout_height="123.5dp"
        android:layout_marginTop="12dp"
        class:srcCompat="@drawable/img_round1"
        android:layout_below="@+id/mapInfo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/round2button"
        android:layout_width="184.5dp"
        android:layout_height="123.5dp"
        class:srcCompat="@drawable/img_round2"
        android:layout_alignTop="@+id/round1button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/round3button"
        android:layout_width="183.5dp"
        android:layout_height="123.5dp"
        class:srcCompat="@drawable/img_round3"
        android:layout_below="@id/round1button"
        android:layout_alignRight="@id/round1button"
        android:layout_alignEnd="@id/round1button"
        android:layout_marginTop="31dp" />

    <ImageButton
        android:id="@+id/round4button"
        android:layout_width="184.5dp"
        android:layout_height="123.5dp"
        class:srcCompat="@drawable/img_round4"
        android:layout_alignTop="@id/round3button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/round5button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        class:srcCompat="@drawable/img_round5"
        android:layout_below="@id/round3button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>