<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <Button
        android:id="@+id/hotelsMondello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Hotels near Mondello Park"
        android:background="@color/colorPrimary"/>

    <Button
        android:id="@+id/hotelsDunLaoghaire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Hotels near Dun Laoghaire"
        android:background="@color/colorPrimary"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/hotelsMondello"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/hotelsWatergrasshill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Hotels near Watergrasshill"
        android:background="@color/colorPrimary"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/hotelsDunLaoghaire"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/restaurantsMondello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Restaurants near Mondello Park"
        android:background="@color/colorPrimary"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/hotelsWatergrasshill"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/restaurantsDunLaoghaire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Restaurants near Dun Laoghaire"
        android:background="@color/colorPrimary"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/restaurantsMondello"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/restaurantsWatergrasshill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Restaurants near Watergrasshill"
        android:background="@color/colorPrimary"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/restaurantsDunLaoghaire"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src= "@drawable/navigation_header"
        android:layout_marginTop="90dp"
        android:id="@+id/imageView2"
        android:layout_below="@+id/thingsToDunLaoghaire"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/thingsToDoKildare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nightlife in Kildare"
        android:background="@color/colorPrimary"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/restaurantsWatergrasshill"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/thingsToDunLaoghaire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Nightlife in Dun Laoghaire"
        android:layout_below="@+id/thingsToDoKildare"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp" />

    <Button
        android:id="@+id/thingsToDoWatergrasshill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nightlife in Watergrasshill"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/thingsToDunLaoghaire"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp" />


</RelativeLayout>
</ScrollView>
